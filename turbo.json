{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".svelte-kit/**", ".vercel/**"],
			"env": [
				"AWS_ACCESS_KEY_ID",
				"AWS_SECRET_ACCESS_KEY",
				"AWS_DEFAULT_REGION",
				"AWS_REGION",
				"LIST_PRICING_TABLE",
				"CONFIG_TABLE",
				"MOLD_PRICES_BUCKET",
				"FILES_BUCKET",
				"REPORTS_BUCKET",
				"ITEM_ORDER_TABLE",
				"ORDER_TABLE",
				"FILE_TABLE",
				"ORDER_AUDIT_TRAIL_TABLE",
				"CUSTOMER_TABLE",
				"CALCULATED_ITEM_ORDER_TABLE",
				"AUTH_DEBUG",
				"PUBLIC_DOMAIN_URL",
				"AUTH_SECRET",
				"AUTH_AUTH0_ID",
				"AUTH_AUTH0_SECRET",
				"AUTH_AUTH0_ISSUER",
				"MAINTENANCE_MODE",
				"ENV_NAME"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
